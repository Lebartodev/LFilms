<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/details_flow"
    app:startDestination="@id/details_fragment">
    <fragment
        android:id="@+id/details_fragment"
        android:name="com.lebartodev.feature_details.ui.MovieDetailsFragment"
        tools:layout="@layout/fragment_details">

        <action
            android:id="@+id/action_artist_details"
            app:destination="@id/artist_details"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="creditId"
                app:argType="string"
                app:nullable="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/artist_details"
        android:name="com.lebartodev.feature_artist.ui.ArtistDetailsFragment"
        tools:layout="@layout/fragment_artist_details" />
</navigation>