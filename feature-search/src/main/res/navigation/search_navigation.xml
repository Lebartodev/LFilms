<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/search_flow"
    app:startDestination="@id/search_fragment">
    <fragment
        android:id="@+id/search_fragment"
        android:name="com.lebartodev.feature_search.ui.SearchFragment"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_details"
            app:destination="@id/movie_details">
            <argument
                android:name="movieId"
                app:argType="long"
                app:nullable="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/movie_details"
        android:name="com.lebartodev.feature_details.ui.MovieDetailsFragment"
        tools:layout="@layout/fragment_details" />
</navigation>