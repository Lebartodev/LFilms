<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/trending_flow"
    app:startDestination="@id/trending_fragment">
    <fragment
        android:id="@+id/trending_fragment"
        android:name="com.lebartodev.feature_trending.ui.TrendingFragment"
        tools:layout="@layout/fragment_trending">

        <action
            android:id="@+id/action_details"
            app:destination="@id/details_flow"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="movieId"
                app:argType="long"
                app:nullable="false" />
        </action>
    </fragment>
    <include app:graph="@navigation/details_navigation" />
</navigation>